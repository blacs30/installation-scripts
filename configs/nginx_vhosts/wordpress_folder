# * * * * * * * * * * * * * * *
# the the part for the wordpress folder
# for further wordpress instances as folder
# * * * * * * * * * * * * * * *
location /wordpress {
        try_files $uri $uri/ /wordpress/index.php?$args;
}

location ~ \.php$ {
        fastcgi_split_path_info ^(/wordpress)(/.*)$;
}
